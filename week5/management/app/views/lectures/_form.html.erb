<%= simple_form_for @lecture, :html=> { class: 'center-form' } do |f| %>
  <%= f.input :name, label: 'Name of lecture', input_html: {value: @lecture.name || ''} %>
  <%= f.input :body, as: :text, label: 'What is this lecture about?', input_html: {value: @lecture.body || ''} %>
  <%= f.button :submit %>
<% end %>