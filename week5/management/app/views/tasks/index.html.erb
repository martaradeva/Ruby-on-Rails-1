<% content_for :title do %>All tasks for lecture <%= params[lecture_id] %><%= @task.lecture_name %><% end %>
<% content_for :description do %>Index page of all tasks for lecture <%= @task.lecture_name %>.<% end %>

<h1>Tasks</h1>
<table>
  <tr>
    <td>Name</td>
    <td>Description</td>
    <td>Created at</td>
    <td>Last modified</td>
    <td>Actions</td>
  </tr>
<% @tasks.each do |t| %>
  <tr>
    <td><%= t.name %></td>
    <td><%= t.description %></td>
    <td><%= t.created_at %></td>
    <td><%= t.updated_at %></td>
    <td> 
      <%= link_to "Show", task_path(t) %>
      <%= link_to "Edit", edit_task_path(t) %>
      <%= button_to "Delete", t, method: :delete, data: {confirm: "Are you sure?"} %>
    </td>
  </tr>
<% end %>
</table>
